@page "/Prioridades/Details"
@page "/Prioridades/Details/{PrioridadId:int}"
@inject PrioridadesService PrioridadesService
@inject NavigationManager navigationManager

<PageTitle>Detalles de las prioridades</PageTitle>

@if (Prioridades != null)
{
    <div class="container">
        <div class="card shadow-header">
            <div class="card-header bg-primary text-white text-center py-2 rounded">
                <h3 class="text-center"><strong>Detalles del Prioridades</strong></h3>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li><strong>PrioridadId:</strong> @Prioridades.PrioridadId</li>
                                <li><strong>Nombres:</strong> @Prioridades.Descripcion</li>
                                <li><strong>Descripcion:</strong> @Prioridades.Tiempo</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center">
                <a href="/Prioridades/Index" class="btn btn-outline-primary">
                    <i class="bi bi-box-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
}
else
{
    <p>Prioridad no encontrada.</p>
}

@code {
    [Parameter]
    public int PrioridadId { get; set; }

    public Prioridades? Prioridades { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (PrioridadId != 0)
        {
            Prioridades = await PrioridadesService.Buscar(PrioridadId);
        }
    }
}
